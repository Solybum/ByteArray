<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Soly.Utils</RootNamespace>
    <Description>Byte array wrapper to ease data type conversions</Description>
    <Authors>Soleil Rojas</Authors>
    <Version>1.2.0</Version>
    <Copyright>Copyright Â© Soleil Rojas 2017</Copyright>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageProjectUrl>https://github.com/solybum/ByteArray</PackageProjectUrl>
    <RepositoryUrl>https://github.com/solybum/ByteArray</RepositoryUrl>
    <PackageTags>byte array data conversion</PackageTags>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.6">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
